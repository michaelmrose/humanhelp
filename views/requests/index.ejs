<%- include('../partials/header') %>
<h2>Welcome to <%=locationName%></h2>
<%requests.reverse().forEach(e=>{%>
    <li class="<%=e.status%>Request"> 
        <img referrerpolicy="no-referrer" 
        class="avatar"
         src="<%=e.requester.avatar%>"
        <%=e.requester.name%> 
        <%if (e.location){%>
        Location: <%=e.location.name%> 
        <%}%>
        <br>
        <%=e.contents%> 
       <div>Status:<%=e.status%></div>
        <%if (authorizedUser && e.status === 'active'){%>
        <form class="opsButtonForm">
        <button formmethod="POST" formaction="/requests/<%=e._id%>/cancel?_method=PUT" class="opsButton opsButtonCancel">Cancel</button>
        <button formmethod="POST" formaction="/requests/<%=e._id%>/complete?_method=PUT" class="opsButton opsButtonComplete">Complete</button>
        <button formmethod="POST" formaction="/requests/<%=e._id%>/delete?_method=DELETE" class="opsButton opsButtonDelete">Delete</button>
        <button formmethod="POST" formaction="/requests/<%=e._id%>/take?_method=PUT" class="opsButton opsButtonService">Take</button>
        </form>
        <%}%>
    </li>
<%})%>
<%- include('../partials/footer') %>